<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net5.0-windows</TargetFramework>
    <AssemblyName>Isaac</AssemblyName>
    <RootNamespace>Isaac</RootNamespace>
    <ApplicationIcon>./Isaac.ico</ApplicationIcon>
    <Description>An example game based on Surreal; a simple Isaac-inspired dungeon crawler.</Description>
  </PropertyGroup>
  <Import Project="..\..\Shared.props"/>
  <Import Project="..\..\Executables.props"/>
  <ItemGroup>
    <ProjectReference Include="..\..\framework\Surreal.Framework.Jam\Surreal.Framework.Jam.csproj"/>
    <ProjectReference Include="..\..\platforms\Surreal.Platform.Desktop\Surreal.Platform.Desktop.csproj"/>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="$(ProjectDir)\Resources\**"/>
    <Content Include="$(ProjectDir)\Assets\**" CopyToOutputDirectory="PreserveNewest"/>
  </ItemGroup>
</Project>