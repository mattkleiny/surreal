<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AssemblyName>Prelude</AssemblyName>
    <RootNamespace>Prelude</RootNamespace>
    <ApplicationIcon>./Prelude.ico</ApplicationIcon>
    <Description>An example game based on Surreal; a software-rendered dungeon crawler based on a game by Notch.</Description>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <OutputType>WinExe</OutputType>
  </PropertyGroup>
  <Import Project="..\..\Shared.props" />
  <Import Project="..\..\Executables.props" />
  <ItemGroup>
    <ProjectReference Include="..\..\src\Surreal.Jam\Surreal.Jam.csproj" />
    <ProjectReference Include="..\..\src\Surreal.Platform.Desktop\Surreal.Platform.Desktop.csproj" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="$(ProjectDir)\Resources\*.*" />
    <EmbeddedResource Include="$(ProjectDir)\Resources\**" />
    <Content Include="$(ProjectDir)\Assets\*.*" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="$(ProjectDir)\Assets\**" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>
</Project>
