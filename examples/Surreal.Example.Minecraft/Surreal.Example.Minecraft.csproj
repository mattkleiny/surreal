<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net5.0-windows</TargetFramework>
    <AssemblyName>Minecraft</AssemblyName>
    <RootNamespace>Minecraft</RootNamespace>
    <ApplicationIcon>./Minecraft.ico</ApplicationIcon>
    <Description>An example game based on Surreal; a simple Minecraft clone.</Description>
  </PropertyGroup>
  <Import Project="..\..\Shared.props" />
  <Import Project="..\..\Executables.props" />
  <ItemGroup>
    <ProjectReference Include="..\..\src\Surreal.Jam\Surreal.Jam.csproj" />
    <ProjectReference Include="..\..\src\Surreal.Platform.Desktop\Surreal.Platform.Desktop.csproj" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="$(ProjectDir)\Resources\*.*" />
    <EmbeddedResource Include="$(ProjectDir)\Resources\**" />
    <Content Include="$(ProjectDir)\Assets\*.*" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="$(ProjectDir)\Assets\**" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>
</Project>