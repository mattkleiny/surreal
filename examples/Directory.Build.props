<!-- common configuration for example projects -->
<Project>
  <Import Project="../Directory.Build.props" />

  <PropertyGroup>
    <IsPackable>false</IsPackable>
    <OutputType>Exe</OutputType>

    <!-- set a default icon for all projects -->
    <ApplicationIcon>../../platforms/Surreal.Platform.Desktop/Resources/icons/surreal.ico</ApplicationIcon>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <OutputType>WinExe</OutputType>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>

    <!-- il compiler flags -->
    <IlcOptimizationPreference>Speed</IlcOptimizationPreference>
    <IlcFoldIdenticalMethodBodies>true</IlcFoldIdenticalMethodBodies>
    <IlcGenerateStackTraceData>false</IlcGenerateStackTraceData>
    <IlcTrimMetadata>true</IlcTrimMetadata>
  </PropertyGroup>

  <ItemGroup>
    <Using Include="Surreal" />
    <Using Include="Surreal.Actors" />
    <Using Include="Surreal.Audio" />
    <Using Include="Surreal.Audio.Clips" />
    <Using Include="Surreal.Collections" />
    <Using Include="Surreal.Diagnostics" />
    <Using Include="Surreal.Diagnostics.Logging" />
    <Using Include="Surreal.Graphics" />
    <Using Include="Surreal.Graphics.Fonts" />
    <Using Include="Surreal.Graphics.Images" />
    <Using Include="Surreal.Graphics.Meshes" />
    <Using Include="Surreal.Graphics.Shaders" />
    <Using Include="Surreal.Graphics.Sprites" />
    <Using Include="Surreal.Graphics.Textures" />
    <Using Include="Surreal.Input" />
    <Using Include="Surreal.Input.Keyboard" />
    <Using Include="Surreal.Input.Mouse" />
    <Using Include="Surreal.Input.Touch" />
    <Using Include="Surreal.Mathematics" />
    <Using Include="Surreal.Memory" />
    <Using Include="Surreal.Timing" />
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)' == 'Release'">
    <PackageReference Include="Microsoft.DotNet.ILCompiler" Version="7.0.0-preview.3.22175.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\modules\Surreal.Modules.Prototyping\Surreal.Modules.Prototyping.csproj" />
  </ItemGroup>

  <ItemGroup Condition="$(ProjectName.EndsWith('Tests'))">
    <ProjectReference Include="..\..\core\Surreal.Testing\Surreal.Testing.csproj" />
  </ItemGroup>
</Project>
