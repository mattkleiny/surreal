<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:components="clr-namespace:Surreal.Editing.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:CompileBindings="True"
             x:DataType="components:GameViewportViewModel"
             x:Class="Surreal.Editing.Components.GameViewport">

  <StackPanel IsEnabled="{Binding Project, Converter={x:Static ObjectConverters.IsNotNull}}"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
    <Button Command="{Binding StartGame}">
      Start Game
    </Button>
    <Button Command="{Binding StopGame}">
      Stop Game
    </Button>
  </StackPanel>

</UserControl>
