// Standard purpose sprite shader.

#shader_type sprite;

attribute(0) vec2 _Position;
attribute(1) vec4 _Color;
attribute(2) vec2 _UV;

uniform sampler2d _Texture;
uniform vec4      _Tint;

void vertex() {
  POSITION = _Position;
}

void fragment() {
  COLOR = SAMPLE(_Texture, _UV) _Color * _Tint;
}
