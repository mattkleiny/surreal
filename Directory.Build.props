<!-- common configuration for all projects -->
<Project>
  <PropertyGroup>
    <Product>Surreal</Product>
    <Authors>Matthew Kleinschafer</Authors>
    <Company>MK Productions</Company>
    <Copyright>CopyrightÂ© 2018, All Rights Reserved.</Copyright>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <Version>1.0.0.0</Version>
    <RepositoryUrl>https://github.com/mattkleiny/surreal</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup>
    <LangVersion>9</LangVersion>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn>CS0414</NoWarn>
    <WarningsAsErrors>CS8600;CS8602;CS8603;CS8604;CS8625;CS8610</WarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <!--  automatically embed resources and assets-->
    <EmbeddedResource Include="$(ProjectDir)\Resources\**"/>
    <Content Include="$(ProjectDir)\Assets\**" CopyToOutputDirectory="PreserveNewest"/>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\JetBrainsAnnotations.cs">
      <Link>Shared\JetBrainsAnnotations.cs</Link>
    </Compile>
  </ItemGroup>
</Project>
