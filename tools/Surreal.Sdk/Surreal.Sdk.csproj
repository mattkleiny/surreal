<Project Sdk="Microsoft.Build.NoTargets/3.7.0">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>MSBuild SDK for the Surreal project.</Description>

    <PackageType>MSBuildSdk</PackageType>
    <PackageTags>MSBuildSdk</PackageTags>
    <ImplicitUsings>false</ImplicitUsings>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>

    <!-- exclude target framework from the package dependencies as we don't include the build output -->
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <IncludeBuildOutput>false</IncludeBuildOutput>
  </PropertyGroup>

  <ItemGroup>
    <None Include="Sdk.props" Pack="true" PackagePath="Sdk" />
    <None Include="Sdk.targets" Pack="true" PackagePath="Sdk" />
    <None Include="Versions.props" Pack="true" PackagePath="Sdk" />
  </ItemGroup>

  <Target Name="WriteBuildProperties" BeforeTargets="Build">
    <WriteLinesToFile File="Versions.props" Overwrite="true"  Lines="&lt;Project&gt;" />
    <WriteLinesToFile File="Versions.props" Overwrite="false" Lines="  &lt;PropertyGroup&gt;" />
    <WriteLinesToFile File="Versions.props" Overwrite="false" Lines="    &lt;SurrealVersion&gt;$(Version)&lt;/SurrealVersion&gt;" />
    <WriteLinesToFile File="Versions.props" Overwrite="false" Lines="  &lt;/PropertyGroup&gt;" />
    <WriteLinesToFile File="Versions.props" Overwrite="false" Lines="&lt;/Project&gt;" />
  </Target>
</Project>
